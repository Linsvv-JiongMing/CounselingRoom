/* pages/video.wxss */
.image {
  width: 746rpx;
}

.image-parent {
  position: relative;
}

.child {
  width: 100%;
  height: 30vw;  
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin-left: auto;
  margin-top: 10vw;
  text-align: center;
}

.title{
  font-weight: 700;
  color: #f5b43e;
}

.wangqi {
  width:100%;
  height:10vw;
  border-bottom: 1px solid #e4e9f0;
}

.wangqi-txt{
  font-size: 4vw;
  font-weight: 500;
  margin-top: 3vw;
  padding: 35%;
}

.cardBox {
  width: 40%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  text-align: center;
  float: left;
  margin-right:5%;
  margin-left: 5%;
  border-radius: 4px;
  margin-top: 5vw;
  margin-bottom: 2vw;
}

.headerBox {
  height: 30vw;
  border-radius: 4px;
}

.cover-img{
  width: 100%;  
  height: 30vw;
  border-radius: 4px;
}

.bodyBox {
  padding: 1vw;
}

.video-name {
  font-size: 3.6vw;
}

.video-date {
  margin-left: 3vw;
  font-size: 3.2vw;
  color: #bfbfbf;
}

.video-list{
  margin-top: 5vw;
}